<div class="container">
  <aside class="filter-list-container">
    <div>
      <p>Filtros</p>
      <ul class="applied-filters-list">
        <li>
          <button class="btn btn-sm">PC <%= image_tag("circle-xmark-solid.svg", height: "18px", width: "18px") %></button>
        </li>
        <li>
          <button class="btn btn-sm">< R$50 <%= image_tag("circle-xmark-solid.svg", height: "18px", width: "18px") %></button>
        </li>
        <li>
          <button class="btn btn-sm">Action <%= image_tag("circle-xmark-solid.svg", height: "18px", width: "18px") %></button>
        </li>
      </ul>
    </div>
    <details open>
      <summary class="filter-list-summary">
        Preço
      </summary>
      <ul class="filter-list">
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="0">
            Grátis
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="5">
            Abaixo de R$5,00
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="10">
            Abaixo de R$10,00
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="15">
            Abaixo de R$15,00
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="25">
            Abaixo de R$25,00
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="50">
            Abaixo de R$50,00
          </label>
        </li>
        <li>
          <label class="filter-list-item">
            <input type="radio" name="price" value="100">
            Abaixo de R$100,00
          </label>
        </li>
      </ul>
    </details>
    <details open>
      <summary class="filter-list-summary">
        Categoria
      </summary>
      <div>
        <input type="text" name="category.name" placeholder="Buscar categoria" class="input input-full"/>
        <ul class="filter-list">
          <% @categories.each do |category| %>
            <li>
              <label class="filter-list-item">
                <input type="checkbox" name="category[]" value="<%= category.id %>" />
                <%= category.name %>
              </label>
            </li>
          <% end %>
        </ul>
      </div>
    </details>
    <input type="submit" value="Aplicar Filtros" class="btn btn-full" />
  </aside>
  <div class="search-container">
    <div>
      <ul class="product-content-type-list">
        <li>
          <%= link_to(products_path({**request.query_parameters.except("content_type")}), class: class_names("btn btn-sm", "btn-active": request.query_parameters["content_type"].nil?)) do %>
            <%= Product.human_attribute_name("content_type.all") %>
          <% end %>
        </li>
        <% (Product.select(:content_type).distinct.map(&:content_type)).each do |content_type| %>
          <li>
            <%= link_to(products_path({**request.query_parameters, "content_type" => content_type}), class: class_names("btn btn-sm", "btn-active": request.query_parameters["content_type"] == content_type)) do %>
              <%= Product.human_attribute_name("content_type.#{content_type}") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <header>
      <%= form_with url: products_path, method: "GET", class: "search" do |f| %>
        <% request.query_parameters.except("q", "button").each do |k, v| %>
          <%= f.hidden_field(k, value: v) %>
        <% end %>
        <%= f.text_field(:q, class: "input input-full", value: params[:q], placeholder: "Buscar jogo ou palavra-chave", autofocus: true) %>
        <%= f.button(type: "submit", class: "btn") do %>
          <span class="sr-only">Buscar</span>
          <%= image_tag("magnifying-glass-solid.svg", width: "20px", height: "20px", "aria-hidden": true) %>
        <% end %>
      <% end %>
    </header>
    <section class="search-results">
      <span><%= @products.size %> resultados</span>
      <ol class="search-result-list">
        <% @products.map { ProductPresenter.new(_1) }.each do |product| %>
          <li>
            <div class="card">
              <div>
                <img src="<%= product.image_url %>" alt="<%= product.image_alt %>" />
              </div>
              <div class="card-body">
                <h4><%= product.name %></h4>
                <ul class="product-categories-list">
                  <% product.categories.each do |category| %>
                    <li><%= category.name %></li>
                  <% end %>
                </ul>
                <div class="product-price">
                  <p class="badge product-price-badge"><%= product.price.zero? ? Product.human_attribute_name("price", count: 0) : number_to_currency(product.price) %></p>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ol>
    </section>
  </div>
</div>
